{
  "name": "backend-evidencias",
  "version": "1.0.0",
  "description": "API REST para gesti√≥n de evidencias",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      ".*\\.router\\.ts"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/controllers/**/*.ts",
      "src/**/middlewares/**/*.ts",
      "src/**/utils/**/*.ts",
      "src/**/*controller*.ts",
      "src/**/*middleware*.ts",
      "src/**/*utils*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ]
  },
  "jestSonar": {
    "reportPath": "reports/sonar-report.xml",
    "reportFile": "sonar-report.xml",
    "indent": 4
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^30.0.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.7",
    "@types/node": "^24.2.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.5.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
